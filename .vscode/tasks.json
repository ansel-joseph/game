{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SFML game",
            "type": "shell",
            "command": "g++",
            "args": [
                ".\\game\\main.cpp",
                "-IC:\\SFML\\include",
                "-LC:\\SFML\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-o",
                ".\\game\\build\\out.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
